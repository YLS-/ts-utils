{
	"name": "@yohs/esbuild-utils",
	"version": "0.2.0",
	"description": "Reusable esbuild plugins, runners, and CLI helpers",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=20"
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./plugins": "./dist/plugins.mjs",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"sideEffects": false,
	"scripts": {
		"clean": "rimraf dist",
		"build": "tsdown",
		"typecheck": "tsc --noEmit",
		"lint": "eslint 'src/**/*.{ts,tsx}'",
		"test": "vitest run",
		"prepublishOnly": "pnpm run build && pnpm run test"
	},
	"dependencies": {
		"@yohs/node-utils": "workspace:*",
		"chalk": "^5.6.2"
	},
	"peerDependencies": {
		"@yohs/gcp-utils": "workspace:*",
		"esbuild": "^0.24.0"
	},
	"peerDependenciesMeta": {
		"@yohs/gcp-utils": {
			"optional": true
		}
	},
	"devDependencies": {
		"@yohs/gcp-utils": "workspace:*",
		"esbuild": "^0.24.0",
		"rimraf": "^6.1.2",
		"tsdown": "^0.16.6",
		"typescript": "^5.9.3"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/YLS-/ts-utils.git",
		"directory": "packages/esbuild-utils"
	},
	"homepage": "https://github.com/YLS-/ts-utils/tree/main/packages/esbuild-utils",
	"bugs": {
		"url": "https://github.com/YLS-/ts-utils/issues"
	}
}
