{
	"name": "@yohs/node-utils",
	"version": "0.2.0",
	"description": "Node.js-focused utilities for env parsing, filesystem IO, console UX, and process orchestration.",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=20"
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./console": "./dist/console.mjs",
		"./crypto": "./dist/crypto.mjs",
		"./env": "./dist/env.mjs",
		"./fs": "./dist/fs.mjs",
		"./http": "./dist/http.mjs",
		"./process": "./dist/process.mjs",
		"./zlib": "./dist/zlib.mjs",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"sideEffects": false,
	"scripts": {
		"build": "tsdown",
		"clean": "rimraf dist",
		"typecheck": "tsc --noEmit",
		"lint": "eslint 'src/**/*.{ts,tsx}'",
		"test": "vitest run",
		"prepublishOnly": "pnpm run build && pnpm run test"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"execa": "^9.5.2"
	},
	"devDependencies": {
		"rimraf": "^6.1.2",
		"tsdown": "^0.16.6",
		"typescript": "^5.9.3"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/YLS-/ts-utils.git",
		"directory": "packages/node-utils"
	},
	"homepage": "https://github.com/YLS-/ts-utils/tree/main/packages/node-utils",
	"bugs": {
		"url": "https://github.com/YLS-/ts-utils/issues"
	}
}
